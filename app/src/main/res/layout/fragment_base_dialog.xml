<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="#212226"
    card:cardCornerRadius="4dp"
    card:cardElevation="0dp"
    card:cardPreventCornerOverlap="false">
    <LinearLayout
        android:id="@+id/base_dialog_root"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#212226">
        <RelativeLayout
            android:id="@+id/base_dialog_inner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:background="#212226"/>
        <RelativeLayout
            android:id="@+id/btn_container"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:background="#212226">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:background="#14ffffff"/>
            <TextView
                android:id="@+id/base_dialog_disagree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/base_dialog_agree"
                android:gravity="center|end"
                android:text="@string/no"
                android:textSize="14sp"
                android:textColor="#9e9fa5"
                android:letterSpacing="0.04" />
            <TextView
                android:id="@+id/base_dialog_agree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="50dp"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="@string/yes"
                android:textSize="14sp"
                android:textColor="#fe2828"
                android:letterSpacing="0.04" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>